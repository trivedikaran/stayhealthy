@model StayHealthy.Entities.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stay Healthy World</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/AngularCSSBundle")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row header">
        <div class="col-md-5">
            <h2 class="logo">
                <a href="#">StayHealthyWorld</a>
            </h2>
        </div>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="col-md-2">
                <br />
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeHolder = "Email" })
            </div>
            <div class="col-md-2">
                <br />
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeHolder = "Password", @id = "LoginPassword" })
            </div>
            <div class="col-md-1">
                <br />
                <button type="submit" class="btn btn-primary btn-md loginbtn">Log In</button>
            </div>
            <div class="col-md-2">
                <br />
                <a href="#" class="forgotPasswordLink">Forgot Password?</a>
            </div>
        }
    </div>
    <div class="row middleSection">
        <div class="col-md-7">
            <h3>We provide community that helps every person in the world to <br />stay healthy and happy</h3>
            <br />
            <h3>Our Mission is Making World Healthy & Happy</h3>
        </div>
        <div class="col-md-4">
            <div class="form-horizontal">
                @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
                {
                    <div class="registrationForm" align="center">
                        <h2>Join Stay Healthy - It's free</h2>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeHolder = "First Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeHolder = "Last Name" })
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeHolder = "Email Address" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeHolder = "Password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.DropDownListFor(m => m.GenderType, (List<SelectListItem>)ViewData["GenderList"],
                                "Gender",
                            new { @class = "form-control", @placeHolder = "Gender" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <p class="form-text">
                                    By Clicking on create an account button you agree our<br class="mob-none">
                                    <a href="https://www.aileensoul.com/terms-and-condition" title="Terms and Condition" tabindex="14" target="_blank">Terms and Condition</a> and <a tabindex="15" href="https://www.aileensoul.com/privacy-policy" title="Privacy policy" target="_blank">Privacy policy</a>.
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" style="width:67%" class="btn btn-primary btn-md loginbtn">Join Community</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="footerLine pt-10">
            <div class="row">
                <div class="col-md-6">
                    Ⓒ @DateTime.UtcNow.Year | by Karan Trivedi
                </div>
                @*<div class="col-md-6 col-sm-8 pull-right col-xs-12">
                        <ul>
                            <li><a href="#" target="_blank">About Us</a> | </li>
                            <li><a href="#" target="_blank">Contact Us</a></li>
                            <li><a href="#" target="_blank">Blog</a>|</li>
                            <li><a href="#" target="_blank">Send Us Feedback</a></li>
                        </ul>
                    </div>*@
            </div>
        </div>
    </footer>
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/JqueryValidation")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/AngularJSBundle")
@Html.Partial("_NotificationPartial")
</html>
